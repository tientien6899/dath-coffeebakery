<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Setting.DoiMatKhauActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:text="Đổi mật khẩu"
                android:textColor="@color/green"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Luu"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/button_luu"
                android:text="Lưu"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="17sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_baseline_live_help_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:text="Bạn muốn đổi mật khẩu ?"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:text="Vui lòng điền mật khẩu hiện tại và mật khẩu mới."
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="40dp"
            android:text="Mật khẩu hiện tại"
            android:textColor="@color/gray"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edt_MKhientai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/edt_ghichu"
            android:hint="Nhập mật khẩu hiện tại"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:text="Mật khẩu mới"
            android:textColor="@color/gray"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edt_MKmoi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/edt_ghichu"
            android:hint="Nhập mật khẩu hiện tại"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:text="Xác nhận mật khẩu mới"
            android:textColor="@color/gray"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edt_xacnhanMKmoi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/edt_ghichu"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>