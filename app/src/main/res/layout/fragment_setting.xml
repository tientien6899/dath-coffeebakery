<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="Cài đặt"
            android:textColor="@color/green"
            android:textSize="30sp"
            android:fontFamily="@font/nunito_bold" />

        <Button
            android:id="@+id/btn_Dangxuat"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="22dp"
            android:background="@drawable/button_dangxuat"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="17sp"
            android:fontFamily="@font/nunito_bold"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_Anhdaidien"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/ic_outline_account_circle_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="22dp"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_Hoten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Họ và tên"
                            android:textColor="@color/gray"
                            android:textSize="17sp"
                            android:fontFamily="@font/nunito_bold" />

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Tên đăng nhập"
                            android:textColor="@color/gray"
                            android:textSize="13sp"
                            android:fontFamily="@font/nunito"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/boder_red"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_outline_account_balance_wallet_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Tổng chi tiêu"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_Tongchitieu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="25.000.000"
                            android:textColor="@color/red"
                            android:textSize="17sp"
                            android:fontFamily="@font/nunito_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="đ"
                            android:textColor="@color/red"
                            android:textSize="17sp"
                            android:fontFamily="@font/nunito_bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="22dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_yellow"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_outline_receipt_long_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Tổng đơn hàng"
                            android:textColor="@color/gray"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_Tongdonhang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="100"
                            android:textColor="@color/red"
                            android:textSize="17sp"
                            android:fontFamily="@font/nunito_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="đơn"
                            android:textColor="@color/yellow"
                            android:textSize="17sp"
                            android:fontFamily="@font/nunito_bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="20dp"
                android:text="Tài khoản"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:fontFamily="@font/nunito_bold" />

            <LinearLayout
                android:id="@+id/Setting_Thongtintk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_person_outline_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Thông tin tài khoản"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:background="@color/whitegray" />

            <LinearLayout
                android:id="@+id/Setting_Doimatkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_vpn_key_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Đổi mật khẩu"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:background="@color/whitegray" />

            <LinearLayout
                android:id="@+id/Setting_Sodiachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_location_on_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Sổ địa chỉ"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:background="@color/whitegray" />

            <LinearLayout
                android:id="@+id/Setting_Thongtinthanhtoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_attach_money_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Thông tin thanh toán"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:background="@color/green" />

            <LinearLayout
                android:id="@+id/Setting_Donhangcuatoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_receipt_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Đơn hàng của tôi"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:background="@color/whitegray" />

            <LinearLayout
                android:id="@+id/Setting_Dsyeuthich"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_baseline_favorite_border_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Danh sách yêu thích"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="20dp"
                android:text="Hỗ trợ"
                android:textColor="@color/gray"
                android:textSize="17sp"
                android:fontFamily="@font/nunito_bold" />

            <LinearLayout
                android:id="@+id/Setting_Vechungtoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_info_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Về chúng tôi"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:background="@color/whitegray" />

            <LinearLayout
                android:id="@+id/Setting_Lienhecskh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_support_agent_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Liên hệ CSKH"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="10dp"
                android:background="@color/whitegray" />

            <LinearLayout
                android:id="@+id/Setting_Chinhsachdieukhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/ic_outline_security_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Chính sách - Điều khoản"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:fontFamily="@font/nunito"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>