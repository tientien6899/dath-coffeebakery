<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".DetailReceipt.DetailReceiptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="Chi tiết đơn hàng"
            android:textColor="@color/green"
            android:textSize="23sp"
            android:fontFamily="@font/nunito_bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="22dp"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/supportMap"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="spartons.com.frisbeeGo.fragments.MapFragment" />

                <TextView
                    android:id="@+id/totalOnlineDrivers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="30dp"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Total Online Drivers : 0"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="10dp"
                        android:text="Thông tin tài xế"
                        android:textColor="@color/gray"
                        android:textSize="18dp"
                        android:fontFamily="@font/nunito_bold" />

                    <ImageButton
                        android:id="@+id/goidientaixe"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_outline_phone_in_talk_24"/>

                    <ImageButton
                        android:id="@+id/nhantintaixe"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="22dp"
                        android:background="@drawable/ic_round_chat_24"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="3">

                        <ImageView
                            android:id="@+id/img_avatartaixe"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/txt_Tentaixe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="22dp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/nunito"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_SDTtaixe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="22dp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/nunito"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:text="Thông tin khách hàng"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:fontFamily="@font/nunito_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_Tenkhachhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="22dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/nunito"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_SDTkhachhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="22dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/nunito"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_Diachigiaohang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="22dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/nunito"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:text="Thông tin đơn hàng"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:fontFamily="@font/nunito_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="center|left"
                        android:text="Mã đơn hàng"
                        android:fontFamily="@font/nunito"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_Madonhang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="22dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="center|left"
                        android:text="Thời gian đặt hàng"
                        android:fontFamily="@font/nunito"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_Thoigiandathang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="22dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="center|left"
                        android:text="Phương thức thanh toán"
                        android:fontFamily="@font/nunito"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_Phuongthucthanhtoan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="22dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:text="Tiền mặt"
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_Chitietdonhang"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="center|left"
                        android:text="Số lượng"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito"/>

                    <TextView
                        android:id="@+id/txt_Soluongmon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp"
                        android:gravity="center|left"
                        android:text="món"
                        android:textColor="@color/gray"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:gravity="center|left"
                        android:text="Tạm tính"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito"/>

                    <TextView
                        android:id="@+id/txt_chitiettamtinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:textColor="@color/gray"
                        android:textSize="17dp"
                        android:fontFamily="@font/nunito_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp"
                        android:gravity="center|left"
                        android:text="đ"
                        android:textColor="@color/gray"
                        android:textSize="17dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Phí giao hàng"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center|right"
                        android:text="+"
                        android:textColor="@color/greenlight"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />

                    <TextView
                        android:id="@+id/txt_chitietphigiaohang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center|right"
                        android:textColor="@color/greenlight"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp"
                        android:gravity="center|left"
                        android:text="đ"
                        android:textColor="@color/greenlight"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Giảm giá"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center|right"
                        android:text="-"
                        android:textColor="@color/red"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="center|right"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp"
                        android:gravity="center|left"
                        android:text="đ"
                        android:textColor="@color/red"
                        android:textSize="15dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="10dp"
                        android:text="TỔNG CỘNG"
                        android:textColor="@color/green"
                        android:textSize="22dp"
                        android:fontFamily="@font/nunito_semibold" />

                    <TextView
                        android:id="@+id/txt_Tongcong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/green"
                        android:textSize="22sp"
                        android:fontFamily="@font/nunito_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp"
                        android:gravity="center|left"
                        android:text="đ"
                        android:textColor="@color/green"
                        android:textSize="22dp"
                        android:fontFamily="@font/nunito_semibold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_huydonhang"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="Tiến hành hủy đơn hàng"
                    android:background="@color/red"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>