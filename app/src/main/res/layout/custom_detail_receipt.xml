<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="22dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_Detail_Soluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="x"
                android:textColor="@color/gray"
                android:textSize="11sp"
                android:fontFamily="@font/nunito_bold"/>

            <ImageView
                android:id="@+id/img_DetailReceipt"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="7dp">

            <TextView
                android:id="@+id/txt_Detail_TenMon"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:hint="Trà xanh đá xay"
                android:textColor="@color/gray"
                android:textSize="13dp"
                android:fontFamily="@font/nunito_bold"/>

            <TextView
                android:id="@+id/txt_CartSize"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:hint="Vừa (M)"
                android:textSize="10dp"
                android:fontFamily="@font/nunito_italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_Detail_Dongia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:hint="50.000"
            android:textColor="@color/green"
            android:textSize="13dp"
            android:fontFamily="@font/nunito_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:text="đ"
            android:textColor="@color/green"
            android:textSize="13dp"
            android:fontFamily="@font/nunito_bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="5dp"
        android:background="@color/whitegray" />
</LinearLayout>